<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="style-contacts.css">
    <link rel="icon" href="/images/icon.png" >
    <script src="./navbar.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contacts</title>
</head>
<body>
    <%- include("./partials/navbar") %>
    <%- include('./partials/loading') %>
    <script>
            document.getElementById('loading').style.display = 'flex';
            // Hide the loading screen when the page is fully loaded
            window.onload = function() {
            document.getElementById('loading').style.display = 'none';
            }
    </script>
    <div class="contacts">
        <% if(pop != '') { %>
            <% if(pop == 'Done!!') { %>
                <p id="pop-up"><%= pop %></p>
                <script>
                    setTimeout(() => {
                        const pop = document.getElementById('pop-up')
                        pop.style.display="none";
                      }, 5000);
                </script>
            <% }  %>
            <% if(pop == 'Failed!!') { %>
                <p id="pop-up" style="background: rgb(139, 3, 3);"><%= pop %></p>
                <script>
                    setTimeout(() => {
                        const pop = document.getElementById('pop-up')
                        pop.style.display="none";
                      }, 5000);
                </script>
            <% }  %>
        <% } %>

        <div class="contact-me">
            <form action="/contacts" method="post">
                
                <div class="title">Contact Me</div>
                <input type="email" name="email" id="email" placeholder="Email">
                <input type="text" name="name" id="name" placeholder="Your Name">
                <textarea name="msg" id="msg" cols="30" rows="10" placeholder="Message"></textarea>
                <button>Send</button>
            </form>
            <div class="mapouter">
                <div class="gmap_canvas">
                    <iframe class="gmap_iframe" width="100%" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?width=372&amp;height=526&amp;hl=en&amp;q=Kg 348 St&amp;t=&amp;z=16&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"></iframe>
                    <a href="https://www.gachacute.com/">www.gachacute.com</a>
            </div><style>.mapouter{position:relative;text-align:right; width:100%;height:526px;}.gmap_canvas {overflow:hidden;border-bottom-right-radius: 8px;border-top-right-radius: 8px;background:none!important;width:100%;height:526px;}.gmap_iframe {height:526px!important;}</style></div>
        </div>
    </div>
    <%- include("./partials/footer") %>
</body>
</html>